script(type="text/x-template")#skills-list
  .skills__content
    ul.skills-group
      li.skills-item(
        v-for="skill in skills"
        v-if="skill.skills.length"
        )
        skills-row(
          :skill="skill"
        )

script(type="text/x-template")#skills-row
  .skills-row
    .skills-row__title {{skill.category}}
    ul.skills-row__list
      li.skills-row__item(v-for="skillItem in skill.skills")
        skill(
          :skill="skillItem"
        )

script(type="text/x-template")#skill
  .skill
    svg(viewBox="0 0 100 100").skill__circle-shape
      circle(cx="50" cy="50" r="40").skill__circle.skill__circle--under
      circle(cx="50" cy="50" r="40" ref="color-circle" stroke="url(#gradient)" transform='rotate(180 50 50)' :style="{ animationDelay: '-' + animatDelay + 's' }").skill__circle.skill__circle--above()
      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
        stop(offset="0%" stop-color='#4a00ed')
        stop(offset="100%" stop-color='#9300e8')
    .skill__title {{skill.title}} 
  