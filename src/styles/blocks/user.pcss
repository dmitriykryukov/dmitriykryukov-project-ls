.user-info {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.user-info__desc {
  font-size: 16px;
  font-weight: 500;
  opacity: 0.4;
}

.user-info__username {
  font-size: 72px;
  font-weight: 900;
  line-height: 4.5rem;
  text-align: center;
}

.user {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user__avatar {
  width: 200px;
  height: 200%;
  margin-bottom: 20px;
}
  